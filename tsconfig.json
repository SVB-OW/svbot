{
	"compilerOptions": {
		"target": "ES2022",
		"module": "CommonJS",
		"moduleResolution": "Node",
		"strict": true,
		"esModuleInterop": true,
		"outDir": "./out",
		"forceConsistentCasingInFileNames": true,
		"types": ["@types/node", "jest"],
		"skipLibCheck": true
	},
	"include": ["./src", "deploy.mjs"],
	"exclude": ["node_modules"]
}
