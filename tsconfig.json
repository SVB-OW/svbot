{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "outDir": "./out",
    "forceConsistentCasingInFileNames": true,
    "types": ["@types/node"],
    "skipLibCheck": true
  },
  "include": ["./src"],
  "exclude": ["node_modules"]
}
